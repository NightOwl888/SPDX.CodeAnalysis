{
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":prConcurrentLimitNone",
    ":prHourlyLimitNone"
  ],
  "enabledManagers": [ "nuget", "github-actions" ],
  "rangeStrategy": "bump",
  "schedule": [ "at any time" ],
  "commitMessagePrefix": "chore: ",
  "packageRules": [
    {
      "groupName": "Test dependencies",
      "matchPackageNames": [ "NUnit", "NUnit3TestAdapter", "Microsoft.NET.Test.Sdk" ],
      "labels": [ "dependencies", "test-deps" ]
    },
    {
      "groupName": "Roslyn dependencies",
      "matchPackagePatterns": [ "^Microsoft\\.CodeAnalysis" ],
      "labels": [ "dependencies", "roslyn" ]
    },
    {
      "groupName": "System.Memory dependencies",
      "matchPackagePatterns": [ "System.Memory", "System.Buffers", "System.Runtime.CompilerServices.Unsafe", "System.Numerics.Vectors" ],
      "enabled": false,
      "labels": [ "dependencies", "manual-upgrade" ]
    },
    {
      "groupName": "Visual Studio SDK Build Tools",
      "matchPackageNames": [ "Microsoft.VSSDK.BuildTools" ],
      "enabled": false,
      "labels": [ "dependencies", "manual-upgrade" ]
    },
    {
      "groupName": "Analyzer dependencies",
      "matchPackagePatterns": [ "Analyzer" ],
      "updateTypes": [ "major", "minor", "patch" ],
      "labels": [ "dependencies", "analyzers" ]
    },
    {
      "groupName": "GitHub Actions",
      "matchManagers": [ "github-actions" ],
      "prCreation": "immediate",
      "pinDigests": true,
      "rangeStrategy": "pin",
      "semanticCommits": true,
      "commitMessageTopic": "GitHub Action {{depName}}",
      "groupSlug": "github-actions-updates",
      "labels": [ "dependencies", "ci" ]
    },
    {
      "matchFileNames": [ "global.json" ],
      "enabled": false
    }
  ],
  "baseBranches": [ "main" ],
  "automerge": false,
  "onboarding": false
}
